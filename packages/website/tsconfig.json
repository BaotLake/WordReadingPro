{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve"
  },
  // "include": ["pages", "components", "containers", "src"],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@wrp/core": [
      "../core/src"
    ],
    "@wrp/ui": [
      "../ui/src"
    ]
  }
}
